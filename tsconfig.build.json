{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "sourceMap": false,
    "inlineSourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "src/**/*.unit.ts",
    "src/**/*.int.ts",
    "src/**/*.e2e.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "test/**/*.unit.ts",
    "test/**/*.int.ts",
    "test/**/*.e2e.ts",
    "test/**/*.spec.ts",
    "test/**/*.test.ts",
    "node_modules",
    "dist"
  ]
}
